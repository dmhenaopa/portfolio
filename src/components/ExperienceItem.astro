---
interface Props {
  date: string;
  title: string;
  description: string;
}

const { date, title, description } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-green-fresh-chartreuse rounded-full mt-1.5 -inset-s-1.5 border border-buffer"
>
</div>
<time class="text-sm font-normal leading-none text-body text-grey-bold-grey"
  >{date}</time
>
<h3 class="text-lg font-semibold text-heading my-2 text-green-bonsai">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-body text-pretty">{description}</p>
